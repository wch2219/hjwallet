<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll">
            <SurfaceView
                android:id="@+id/preview_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
            <zz.hjzn.hjwallet.zxing.ViewfinderView
                android:id="@+id/viewfinder_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="34dp"
                android:layout_marginRight="34dp"
                android:layout_marginTop="80dp"
                android:background="@mipmap/icon_shanguangbu" />
            <Button
                android:id="@+id/btn_seletepic"
                android:layout_width="@dimen/demen_30dp"
                android:layout_height="@dimen/demen_30dp"
                android:layout_marginLeft="@dimen/demen_34dp"
                android:layout_marginTop="@dimen/demen_80dp"
                android:background="@mipmap/icon_seletecode" />
        </RelativeLayout>
    </FrameLayout>
    <include layout="@layout/toobal_titleblue"
        />

</RelativeLayout>