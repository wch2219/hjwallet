<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitys.StartActivity">
    <include
        layout="@layout/toobal_titleblack"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        <LinearLayout
            android:id="@+id/ll_selete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/demen_10dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/iv_pic"
                android:layout_width="@dimen/demen_30dp"
                android:layout_height="@dimen/demen_30dp" />
            <TextView
                style="@style/TextView14black"
                android:layout_weight="1"
                android:id="@+id/tv_name"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text="狮子座"
                 />
            <ImageView
                android:layout_width="@dimen/demen_20dp"
                android:layout_height="@dimen/demen_20dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_jiantoudown"
                />
        </LinearLayout>
    <View
        style="@style/haveing"
        />
    <TextView
        style="@style/TextView16black"
        android:text="---今日运势---"
        android:id="@+id/tv_date"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/demen_10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/demen_5dp"
        android:layout_marginLeft="@dimen/demen_5dp"
        >
        <TextView
            style="@style/TextView14black"
            android:text="综合指数："
            />
        <TextView
            android:id="@+id/tv_all"
            style="@style/TextView14black"
            android:textColor="@color/colorAccent"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/demen_5dp"
        android:layout_marginLeft="@dimen/demen_5dp"
        >
        <TextView
            style="@style/TextView14black"
            android:text="幸运颜色："
            />
        <TextView
            android:id="@+id/tv_color"
            style="@style/TextView14black"
            android:textColor="@color/colorAccent"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/demen_5dp"
        android:layout_marginLeft="@dimen/demen_5dp"
        >
        <TextView
            style="@style/TextView14black"
            android:text="健康指数："
            />
        <TextView
            android:id="@+id/tv_health"
            style="@style/TextView14black"
            android:textColor="@color/colorAccent"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/demen_5dp"
        android:layout_marginLeft="@dimen/demen_5dp"
        >
        <TextView
            style="@style/TextView14black"
            android:text="爱情指数："
            />
        <TextView
            android:id="@+id/tv_love"
            style="@style/TextView14black"
            android:textColor="@color/colorAccent"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/demen_5dp"
        android:layout_marginLeft="@dimen/demen_5dp"
        >
        <TextView
            style="@style/TextView14black"
            android:text="财运指数："
            />
        <TextView
            android:id="@+id/tv_money"
            style="@style/TextView14black"
            android:textColor="@color/colorAccent"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/demen_5dp"
        android:layout_marginLeft="@dimen/demen_5dp"
        >
        <TextView
            style="@style/TextView14black"
            android:text="幸运数字："
            />
        <TextView
            android:id="@+id/tv_luckey"
            style="@style/TextView14black"
            android:textColor="@color/colorAccent"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/demen_5dp"
        android:layout_marginLeft="@dimen/demen_5dp"
        >
        <TextView
            style="@style/TextView14black"
            android:text="速配星座："
            />
        <TextView
            android:id="@+id/tv_qfriend"
            style="@style/TextView14black"
            android:textColor="@color/colorAccent"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/demen_5dp"
        android:layout_marginLeft="@dimen/demen_5dp"
        >
        <TextView
            style="@style/TextView14black"
            android:text="工作指数："
            />
        <TextView
            android:id="@+id/tv_work"
            style="@style/TextView14black"
            android:textColor="@color/colorAccent"
            />

    </LinearLayout>
            <View
                style="@style/haveing"
                />
    <TextView
        android:id="@+id/summary"
        style="@style/TextView14black"
        android:lineSpacingMultiplier="1.2"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_margin="@dimen/demen_10dp"
        />

        </LinearLayout>

    </ScrollView>
    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/demen_20dp"
        >
        <RadioButton
            android:id="@+id/rb_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:checked="true"
            android:background="@drawable/selete_start"
            android:textColor="@drawable/selector_start_textcolor"
            android:layout_height="@dimen/demen_30dp"
            android:text="今日"
            android:gravity="center"
            android:button="@null"
            />
        <RadioButton
            android:id="@+id/rb_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/selete_start"
            android:textColor="@drawable/selector_start_textcolor"
            android:layout_height="@dimen/demen_30dp"
            android:text="明日"
            android:gravity="center"
            android:button="@null"
            />
        <RadioButton
            android:id="@+id/rb_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/selete_start"
            android:textColor="@drawable/selector_start_textcolor"
            android:layout_height="@dimen/demen_30dp"
            android:text="本周"
            android:gravity="center"
            android:button="@null"
            />
        <RadioButton
            android:id="@+id/rb_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/selete_start"
            android:textColor="@drawable/selector_start_textcolor"
            android:layout_height="@dimen/demen_30dp"
            android:text="本月"
            android:gravity="center"
            android:button="@null"
            />
        <!--<RadioButton-->
            <!--android:id="@+id/rb_5"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_weight="1"-->
            <!--android:background="@drawable/selete_start"-->
            <!--android:textColor="@drawable/selector_start_textcolor"-->
            <!--android:layout_height="@dimen/demen_30dp"-->
            <!--android:text="今年"-->
            <!--android:gravity="center"-->
            <!--android:button="@null"-->
            <!--/>-->
    </RadioGroup>

</LinearLayout>